<Window x:Class="DigitalDataCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalDataCopy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="775" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="0,3.5,0,0"></Setter>
            <Setter Property="Height" Value="27.5" ></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,0,10,0" />
            <Setter Property="Height" Value="27.5"/>
        </Style>
    </Window.Resources>
    <Grid ShowGridLines="False">
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition  Height="27.5"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="0.7*"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="0.7*"/>
            <RowDefinition  Height="0.7*"/>
            <RowDefinition  Height="0.7*"/>
            <RowDefinition  Height="0.7*"/>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="0.8*"/>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="DIGITAL DATA COPY SUPPORTER" FontWeight="Bold" FontSize="15" Grid.ColumnSpan="6" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Grid.Row="1" Grid.Column="3" 
               Content="Sub Foder" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="0,-5,0,0" />

        <Button x:Name="FolderFromButton" Click="FolderFromButton_Click" Grid.Row="2" Grid.Column="0" Content="Folder From" />
        <TextBox x:Name="FolderFromTextBox" Grid.Row="2" Grid.Column="1" />
        <TextBox x:Name="SubfolderPrefixTextBox" Grid.Row="2" Grid.Column="3" Height="27.5" Padding="0,3.5,0,0"/>
        <TextBox x:Name="SubfolderPostFixTextBox" Grid.Row="2" Grid.Column="5" />
        <Label Grid.Row="3" Grid.Column="3" 
               Content="Excel File" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="0,-5,0,0" />
        <Button  x:Name="xlsFromButton" Click="xlsFromButton_Click" Grid.Row="4" Grid.Column="0" Content="*.xls From"/>
        <TextBox x:Name="xlsFromTextBox" Grid.Row="4" Grid.Column="1"  />
        <TextBox  Grid.Row="4" Grid.Column="3" />
        <TextBox  Grid.Row="4" Grid.Column="5" />
        <Label Content= ".xls"  Grid.Row="4" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="FolderToButton" Click="FolderToButton_Click" Grid.Row="5" Grid.Column="0" Content="Folder To"/>
        <TextBox x:Name="FolderToTextBox" Grid.Row="5" Grid.Column="1" />
        
        <Button Name="xlsToButton" Click="xlsToButton_Click" Grid.Row="6" Grid.Column="0" Content="*.xls To"/>
        <TextBox x:Name="xlsToTextBox"  Grid.Row="6" Grid.Column="1" />

        <Button x:Name="CopyButton" Click="CopyButton_Click" Grid.Row="7" Grid.Column="1" 
                Content="Press Enter Or Click To Copy" Grid.ColumnSpan="5" Margin="0"
                IsDefault="True"
                />

        <Label Grid.Row="8" Grid.Column="1" Content="Print Sccreen" Margin="0,-5,0,0" />
        <Label Grid.Row="8" Grid.Column="3" Content="Sub Folder" HorizontalAlignment="Left" Margin="0,-5,0,0" />

        <Button Grid.Row="9" Grid.Column="0" Content="From" />
        <TextBox  Grid.Row="9" Grid.Column="1" />
        <TextBox  Grid.Row="9" Grid.Column="3" />
        <TextBox  Grid.Row="9" Grid.Column="5" />
        <Button Grid.Row="10" Grid.Column="3" Content="Luu MH SOL" Margin="0"/>
        <Button Grid.Row="10" Grid.Column="5" Content="Luu MH EOL" Margin="0"/>
    </Grid>
</Window>
